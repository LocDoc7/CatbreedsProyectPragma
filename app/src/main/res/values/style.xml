<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CatBreedsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:fontFamily">@font/latothin</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">18sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/black</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/primaryColor</item>
        <item name="android:fontFamily">@font/latoregular</item>
    </style>

</resources>