<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/btnAtras"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:src="@drawable/ic_btn_atras"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvNombreRazaDetalle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="@string/s_nombre_raza"
            android:fontFamily="@font/latoregular"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_weight="1"
        android:id="@+id/imgGatoDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:src="@drawable/catdefault"/>
    <LinearLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/backdetalle"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_DescripcionDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_TemperamentoDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_PaisOrigenDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_InteligenciaDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_AdaptabilidadDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_EsperanzaVidaDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_NivelAfectoDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_NivelEnergiaDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>